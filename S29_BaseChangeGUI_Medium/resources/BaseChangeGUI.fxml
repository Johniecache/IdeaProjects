<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ChoiceBox?>
<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="BaseChangeGUIController"
            prefHeight="200" prefWidth="400">

    <children>
        <Label fx:id="curr_base_label" layoutX="80" layoutY="20"/>
        <ChoiceBox fx:id="curr_base_box" layoutX="65" layoutY="40"/>

        <Label fx:id="converted_base_label" layoutX="235" layoutY="20"/>
        <ChoiceBox fx:id="converted_base_box" layoutX="225" layoutY="40"/>

        <Label fx:id="current_number_label" layoutX="68" layoutY="80"/>
        <TextField fx:id="input_value" layoutX="40" layoutY="100"/>

        <Label fx:id="converted_number_label" layoutX="223" layoutY="80"/>
        <TextField fx:id="output_value" layoutX="200" layoutY="100"/>

        <Button layoutX="165" layoutY="140" text="Convert" onAction="#convertBaseButtonPressed"/>
    </children>
</AnchorPane>
